.tab-content#post_seo
  .horizontal-form
    %div{style: "margin: 40px 0"}
      .horizontal-form-group
        .horizontal-form-label
          = Spina::Blog::Post.human_attribute_name :seo_title
        .horizontal-form-content
          = f.text_field :seo_title, placeholder: Spina::Blog::Post.human_attribute_name(:seo_title_placeholder)

      .horizontal-form-group
        .horizontal-form-label
          = Spina::Blog::Post.human_attribute_name :description
        .horizontal-form-content
          = f.text_field :description, placeholder: Spina::Blog::Post.human_attribute_name(:description_placeholder)
